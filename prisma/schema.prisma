generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @default(autoincrement()) @id
  role            Role    @default(USER)
  email           String  @unique
  name            String
  password        String
}

model Book {
  id              Int      @default(autoincrement()) @id
  title           String
  author          String
  genres          String[]
  publicationDate DateTime
}

enum Role {
  USER
  ADMIN
}